                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                    <TextBlock Background="#55000000"
                                               FontSize="14"
                                               Foreground="#FFFFFFFF"
                                               Text="Time: "><Run Text="Time: " /></TextBlock>
                                    <TextBlock Background="#FF000000"
                                               FontSize="14"
                                               Foreground="#FFFFFFFF"
                                               Text="{Binding Path=MediaTime}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
