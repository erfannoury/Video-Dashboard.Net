                                                            <GradientStop Color="#40242424"
                                                                          Offset="0" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.BorderBrush>
                                                        <LinearGradientBrush EndPoint="0.5,1"
                                                                             StartPoint="0.5,0">
                                                            <GradientStop Color="#00000000"
                                                                          Offset="0.927" />
                                                            <GradientStop Color="#FF000000"
                                                                          Offset="0" />
                                                            <GradientStop Color="#FF9D9D9D"
                                                                          Offset="1" />
                                                            <GradientStop Color="#00000000"
                                                                          Offset="0.065" />
