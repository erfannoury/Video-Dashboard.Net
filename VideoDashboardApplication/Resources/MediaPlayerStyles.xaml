                                                                       RenderTransformOrigin="0.5,0.5"
                                                                       FontFamily="Verdana"
                                                                       FontWeight="Normal"
                                                                       FontStyle="Normal"
                                                                       FontSize="10">
															<TextBlock.Foreground>
																<LinearGradientBrush EndPoint="0.5,1"
                                                                                     StartPoint="0.5,0">
																	<GradientStop Color="#FF222222"
                                                                                  Offset="0" />
																	<GradientStop Color="#FFB5B5B5"
                                                                                  Offset="1" />
																	<GradientStop Color="#FF9F9F9F"
                                                                                  Offset="0.927" />
																	<GradientStop Color="#FF969696"
